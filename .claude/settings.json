{
    "hooks": {
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/session-start.sh"
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "event": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/pre-commit-check.sh \"$CLAUDE_BASH_COMMAND\""
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "event": "Edit",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/post-edit-format.sh $CLAUDE_FILE_PATH"
                    }
                ]
            },
            {
                "event": "Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/post-edit-format.sh $CLAUDE_FILE_PATH"
                    }
                ]
            },
            {
                "event": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/post-bash-notify.sh \"$CLAUDE_BASH_COMMAND\" $CLAUDE_BASH_EXIT_CODE"
                    }
                ]
            }
        ]
    },
    "permissions": {
        "allow": [
            "WebSearch",
            "WebFetch(domain:docs.rs)",
            "WebFetch(domain:github.com)",
            "WebFetch(domain:developers.asana.com)",
            "WebFetch(domain:release-plz.ieni.dev)",
            "WebFetch(domain:release-plz.dev)",
            "WebFetch(domain:crates.io)",
            "WebFetch(domain:rust-lang.org)",
            "WebFetch(domain:stackoverflow.com)",
            "Bash(cat:*)",
            "Bash(ls:*)",
            "Bash(head:*)",
            "Bash(tail:*)",
            "Bash(wc:*)",
            "Bash(grep:*)",
            "Bash(find:*)",
            "Bash(echo:*)",
            "Bash(pwd:*)",
            "Bash(which:*)",
            "Bash(env:*)",
            "Bash(date:*)",

            "Bash(uniq:*)",
            "Bash(diff:*)",
            "Bash(dirname:*)",
            "Bash(basename:*)",
            "Bash(realpath:*)",
            "Bash(tree:*)",
            "Bash(file:*)",
            "Bash(stat:*)",
